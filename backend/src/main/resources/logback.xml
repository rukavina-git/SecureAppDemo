<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] - %msg%n</pattern>
        </encoder>
    </appender>
<!--Logging for info, warn and errors. Change to debug if we want to log trace and debug.-->
    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
